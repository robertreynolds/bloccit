<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <p><%= markdown @comment.body %></p>
      </div>
  <div class="span4">
    <% if can? :edit, @comments %>
      <%= link_to "Edit", edit_post_comments_path(@post,@comments), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>
